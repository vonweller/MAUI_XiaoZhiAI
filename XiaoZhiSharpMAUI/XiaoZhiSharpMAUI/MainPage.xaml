<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XiaoZhiSharpMAUI.MainPage"
             Title="小智AI助手"
             BackgroundColor="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 状态栏 -->
        <Border Grid.Row="0" 
                BackgroundColor="#2196F3"
                Padding="15,10">
            <StackLayout>
                <Label x:Name="StatusLabel" 
                       Text="小智AI助手已就绪"
                       TextColor="White"
                       FontSize="16"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <Label x:Name="ConnectionLabel" 
                       Text="连接状态：未连接"
                       TextColor="White"
                       FontSize="12"
                       HorizontalOptions="Center" />
            </StackLayout>
        </Border>

        <!-- 消息列表 -->
        <ScrollView Grid.Row="1" 
                    x:Name="MessageScrollView"
                    Padding="10">
            <StackLayout x:Name="MessagesContainer" 
                         Spacing="10">
                
                <!-- 欢迎消息 -->
                <Frame BackgroundColor="#E3F2FD" 
                       Padding="15"
                       CornerRadius="10"
                       HasShadow="True">
                    <StackLayout>
                        <Label Text="🤖 小智AI助手" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="#1976D2" />
                        <Label Text="欢迎使用小智AI助手！" 
                               FontSize="14" 
                               TextColor="#424242" />
                        <Label Text="功能说明：" 
                               FontSize="12" 
                               FontAttributes="Bold" 
                               TextColor="#666666" />
                        <Label Text="• 点击🎤录音按钮开始语音对话" 
                               FontSize="12" 
                               TextColor="#666666" />
                        <Label Text="• 在下方输入框输入文字消息" 
                               FontSize="12" 
                               TextColor="#666666" />
                        <Label Text="• 支持实时语音识别和AI回复" 
                               FontSize="12" 
                               TextColor="#666666" />
                    </StackLayout>
                </Frame>
                
            </StackLayout>
        </ScrollView>

        <!-- 录音控制 -->
        <Border Grid.Row="2" 
                BackgroundColor="White"
                Padding="10"
                Stroke="#E0E0E0"
                StrokeThickness="1">
            <StackLayout Spacing="15">
                
                <!-- 录音控制区域 -->
                <StackLayout Orientation="Horizontal" 
                             HorizontalOptions="Center" 
                             Spacing="20">
                    
                    <Button x:Name="RecordButton" 
                            Text="🎤 开始录音"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            FontSize="16"
                            WidthRequest="150"
                            HeightRequest="50"
                            CornerRadius="25"
                            Clicked="OnRecordButtonClicked" />
                    
                    <Label x:Name="RecordingStatusLabel" 
                           Text="准备录音"
                           FontSize="14"
                           TextColor="#666666"
                           VerticalOptions="Center" />
                    
                </StackLayout>
                
                <!-- 诊断工具区域 -->
                <StackLayout Orientation="Horizontal" 
                             HorizontalOptions="Center" 
                             Spacing="10">
                    
                    <Button x:Name="NetworkDiagnosticButton" 
                            Text="🔍 网络诊断"
                            BackgroundColor="#FF9800"
                            TextColor="White"
                            FontSize="14"
                            WidthRequest="120"
                            HeightRequest="40"
                            CornerRadius="20"
                            Clicked="OnNetworkDiagnosticClicked" />
                    
                    <Button x:Name="WebSocketTestButton" 
                            Text="🔌 连接测试"
                            BackgroundColor="#9C27B0"
                            TextColor="White"
                            FontSize="14"
                            WidthRequest="120"
                            HeightRequest="40"
                            CornerRadius="20"
                            Clicked="OnWebSocketTestClicked" />
                    
                    <Button x:Name="ReconnectButton" 
                            Text="🔄 重新连接"
                            BackgroundColor="#F44336"
                            TextColor="White"
                            FontSize="14"
                            WidthRequest="120"
                            HeightRequest="40"
                            CornerRadius="20"
                            Clicked="OnReconnectClicked" />
                    
                </StackLayout>
                
            </StackLayout>
        </Border>

        <!-- 文字输入区域 -->
        <Border Grid.Row="3" 
                BackgroundColor="White"
                Padding="10"
                Stroke="#E0E0E0"
                StrokeThickness="1">
            <Grid ColumnDefinitions="*,Auto">
                
                <Entry x:Name="MessageEntry" 
                       Grid.Column="0"
                       Placeholder="输入文字消息..."
                       FontSize="16"
                       BackgroundColor="#F8F8F8"
                       Completed="OnMessageEntryCompleted" />
                
                <Button x:Name="SendButton" 
                        Grid.Column="1"
                        Text="发送"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        FontSize="14"
                        WidthRequest="80"
                        HeightRequest="40"
                        CornerRadius="20"
                        Margin="10,0,0,0"
                        Clicked="OnSendButtonClicked" />
                
            </Grid>
        </Border>

    </Grid>

</ContentPage>
