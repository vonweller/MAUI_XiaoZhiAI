<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="XiaoZhiAI_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:XiaoZhiAI_MAUI.Pages"
    FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False">

    <FlyoutItem Title="微信聊天" Icon="chat.png">
        <ShellContent ContentTemplate="{DataTemplate pages:ChatPage}" Route="ChatPage" />
    </FlyoutItem>
    <FlyoutItem Title="设置" Icon="settings.png">
        <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" Route="SettingsPage" />
    </FlyoutItem>
    <FlyoutItem Title="主页" Icon="home.png">
        <ShellContent ContentTemplate="{DataTemplate pages:MainPage}" Route="MainPage" />
    </FlyoutItem>

</Shell>
