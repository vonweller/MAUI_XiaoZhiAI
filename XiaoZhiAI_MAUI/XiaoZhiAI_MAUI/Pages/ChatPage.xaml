<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XiaoZhiAI_MAUI.Pages.ChatPage"
             Title="微信聊天">
    <Grid RowDefinitions="Auto,Auto,*,Auto" BackgroundColor="#F7F7F7">
        <!-- 顶部蓝色提示区 -->
        <StackLayout Grid.Row="0" BackgroundColor="#2196F3" Padding="0,10,0,0">
            <Label Text="播放语音中..." FontSize="20" TextColor="White" HorizontalOptions="Center"/>
            <Label Text="连接状态：已连接" FontSize="14" TextColor="White" HorizontalOptions="Center"/>
        </StackLayout>
        <!-- 功能说明区 -->
        <Frame Grid.Row="1" BackgroundColor="#E6F0FA" Padding="16,10" HasShadow="False" CornerRadius="0">
            <VerticalStackLayout Spacing="6">
                <Label Text="欢迎使用小智AI助手！" FontSize="16" TextColor="#222"/>
                <Label Text="功能说明：" FontSize="14" TextColor="#222"/>
                <Label Text="· 点击🎤录音按钮开始语音对话" FontSize="13" TextColor="#222"/>
                <Label Text="· 在下方输入框输入文字消息" FontSize="13" TextColor="#222"/>
                <Label Text="· 支持实时语音识别和AI回复" FontSize="13" TextColor="#222"/>
            </VerticalStackLayout>
        </Frame>
        <!-- 聊天消息区 -->
        <ScrollView Grid.Row="2" BackgroundColor="#F7F7F7">
            <VerticalStackLayout x:Name="ChatStack" Padding="10,10,10,0" Spacing="10">
                <!-- 消息由后台动态添加 -->
            </VerticalStackLayout>
        </ScrollView>
        <!-- 底部输入区 -->
        <Grid Grid.Row="3" Padding="10,8" ColumnSpacing="8" BackgroundColor="#F7F7F7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Frame Grid.Column="0" Padding="0" CornerRadius="18" BackgroundColor="White" HasShadow="False" VerticalOptions="Center" HeightRequest="44">
                <Entry x:Name="MessageEntry" Placeholder="输入文字消息..." HeightRequest="44" BackgroundColor="Transparent" TextColor="#222"/>
            </Frame>
            <Button Text="发送" Grid.Column="1" HeightRequest="44" CornerRadius="18" BackgroundColor="#2196F3" TextColor="White" Clicked="OnSendClicked" WidthRequest="60" Padding="10,0"/>
            <Button Text="🎤 开始录音" Grid.Column="2" HeightRequest="44" CornerRadius="18" BackgroundColor="#1DBA4C" TextColor="White" Clicked="OnRecordClicked" WidthRequest="90" Padding="10,0" FontSize="16"/>
            <Button Text="准备录音" Grid.Column="3" HeightRequest="44" CornerRadius="18" BackgroundColor="#E0E0E0" TextColor="#888" IsEnabled="False" WidthRequest="80" Padding="10,0" FontSize="16"/>
        </Grid>
    </Grid>
</ContentPage> 