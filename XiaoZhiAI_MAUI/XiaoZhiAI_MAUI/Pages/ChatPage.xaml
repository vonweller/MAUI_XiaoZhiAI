<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XiaoZhiAI_MAUI.Pages.ChatPage"
             Title="微信聊天">
    <Grid RowDefinitions="Auto,*,Auto" BackgroundColor="#F7F7F7">
        <!-- 顶部状态栏 -->
        <Frame Grid.Row="0" BackgroundColor="#2196F3" Padding="0" HasShadow="False" CornerRadius="0">
            <Grid Padding="15,10" ColumnDefinitions="*,Auto">
                <StackLayout Grid.Column="0" Orientation="Vertical" VerticalOptions="Center">
                    <Label Text="小智AI助手" FontSize="18" FontAttributes="Bold" TextColor="White"/>
                    <Label Text="连接状态：已连接" FontSize="12" TextColor="White" Opacity="0.8"/>
                </StackLayout>
                <StackLayout Grid.Column="1" Orientation="Horizontal" VerticalOptions="Center">
                    <Label x:Name="StatusIcon" Text="🟢" FontSize="16" TextColor="White" VerticalOptions="Center"/>
                    <Label x:Name="StatusText" Text="准备就绪" FontSize="12" TextColor="White" VerticalOptions="Center"/>
                </StackLayout>
            </Grid>
        </Frame>
        
        <!-- 聊天消息区 -->
        <ScrollView Grid.Row="1" BackgroundColor="#F7F7F7" Padding="0">
            <VerticalStackLayout x:Name="ChatStack" Padding="0,15,0,15" Spacing="6">
                <!-- 欢迎消息 -->
                <Frame BackgroundColor="#E8E8E8" CornerRadius="8" Padding="12,8" HasShadow="False" 
                       HorizontalOptions="Center" Margin="40,0,40,10">
                    <StackLayout Spacing="4">
                        <Label Text="欢迎使用小智AI助手！" FontSize="14" FontAttributes="Bold" 
                               TextColor="#333" HorizontalTextAlignment="Center"/>
                        <Label Text="• 输入文字或点击🎤语音对话" FontSize="12" TextColor="#666" HorizontalTextAlignment="Center"/>
                        <Label Text="• 支持实时语音识别和AI回复" FontSize="12" TextColor="#666" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </Frame>
                <!-- 动态消息在这里添加 -->
            </VerticalStackLayout>
        </ScrollView>
        
        <!-- 底部输入区 -->
        <Border Grid.Row="2" BackgroundColor="White" Stroke="#E0E0E0" StrokeThickness="1">
            <Grid Padding="12,8" ColumnSpacing="8" RowDefinitions="Auto,Auto">
                <!-- 主输入行 -->
                <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto">
                    <Border Grid.Column="0" Stroke="#E0E0E0" StrokeThickness="1" StrokeShape="RoundRectangle 20" 
                            BackgroundColor="#F8F8F8" Padding="15,0" MinimumHeightRequest="40">
                        <Entry x:Name="MessageEntry" 
                               Placeholder="输入消息..." 
                               BackgroundColor="Transparent" 
                               TextColor="#333"
                               PlaceholderColor="#999"
                               FontSize="15"
                               VerticalOptions="Center"/>
                    </Border>
                    <Button Grid.Column="1" 
                            Text="发送" 
                            BackgroundColor="#007AFF" 
                            TextColor="White" 
                            CornerRadius="20" 
                            HeightRequest="40"
                            WidthRequest="70"
                            FontSize="14"
                            Margin="8,0,0,0"
                            Clicked="OnSendClicked"/>
                    <Button Grid.Column="2" 
                            Text="🎤" 
                            BackgroundColor="#34C759" 
                            TextColor="White" 
                            CornerRadius="20" 
                            HeightRequest="40"
                            WidthRequest="40"
                            FontSize="18"
                            Margin="8,0,0,0"
                            Clicked="OnRecordClicked"/>
                </Grid>
                
                <!-- 录音提示行（可选显示） -->
                <Label Grid.Row="1" 
                       Text="🔴 按住录音，松开发送" 
                       FontSize="12" 
                       TextColor="#999" 
                       HorizontalOptions="Center" 
                       Margin="0,4,0,0"
                       IsVisible="False"/>
            </Grid>
        </Border>
    </Grid>
</ContentPage> 